@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-info">
            <strong> Select your prefered payment method to complete your order.</strong><br />
            Test Cards Url : <a href="https://sandbox.interswitchng.com/docbase/docs/webpay/test-cards/" target="_blank">https://sandbox.interswitchng.com/docbase/docs/webpay/test-cards/</a><br /><br />
            For USSD, Click on the Simulate payment at the top right coner of the Dialogue to simulate test Payment.
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-md-4">
        <h3>Review</h3>
        <p>Segun Olaiya</p>
        <address>
            <small>
                <strong>Pick Up Location</strong>
                UYO EXPRESS HUB<br />
                +234 813-824-0732<br />
                info.uyo@gnldgloba.com<br />
                2 Okpon Street<br />
                Opposite Ekpana Street by MC Cyber Cafe<br />
                off Ikot-Ekpene Road<br />
                UYO, AK, NG
            </small>
        </address>

        <div class="form-group">
            <label>Neolife Office Instructions</label>
            <textarea name="" id="input" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary btn-sm">Submit Instruction</button>
        </div>

    </div>

    <div class="col-sm-4">
        <h3>Order Summary</h3>

        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Sub Total
                <span class="badge badge-primary badge-pill">&#x20A6; @ViewBag.Amount</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Shipping
                <span class="badge badge-info badge-pill">&#x20A6;0.00</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Before Tax
                <span class="badge badge-warning badge-pill">&#x20A6; @ViewBag.Amount</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Tax
                <span class="badge badge-danger badge-pill">&#x20A6; 00.00</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Grand Total
                <span class="badge badge-success badge-pill">&#x20A6; @ViewBag.Amount</span>
            </li>
        </ul>
    </div>

    <div class="col-sm-4 col-md-4">
        <h3>Payment Methods</h3>

        <ul class="list-group">
            <li class="list-group-item">
                @Html.Partial("InterswitchForm")
                @Html.Partial("UssdForm")
                <a href="javascript:void(0)" onclick="$('#form').submit()">
                    <img src="~/Content/images/interswitch.png" class="img img-thumbnail img-responsive" />
                </a>
            </li>
            <li class="list-group-item"><strong><a href="javascript:void(0)" onclick="$('#ussd-form').submit()">PAY VIA USSD</a></strong></li>
            <li class="list-group-item"><strong><a href="javascript:void(0)">Bank Deposit</a></strong></li>
            <li class="list-group-item"><strong><a href="javascript:void(0)">Mobile Money</a></strong></li>
        </ul>
    </div>

</div>
